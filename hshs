#Funcion con parametros y sin retorno

def suma(num1,num2):
    r=num1+num2
    print(r)



print('Inicio de programa')
a=int(input('Ingrese un número: '))
b=int(input('ingrese otro número: '))
suma(a,b)

print('Fin del programa')

