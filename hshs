# Funcion sin parametros y sin retorno

def suma(num1,num2):
    r = num1+num2
    print(r)
    print(f'Ejecutado desde {__name__}')


if __name__=="__main__":
    print('Inicio de prueba')

    suma(10,15)

    print('Fin del prueba')

    #
    import Fcn_Tupla

def main():
    a=''
    pal=''
    while a != 'exit':
        pal += (f' {a}')
        a=input('Ingrese un dato: ')

    Fcn_Tupla.app(pal,i=1)


if __name__=="__main__":
    main()
else:
    Fcn_Tupla.app(3,4,56,67,78,a=1,i=2,k=4)

